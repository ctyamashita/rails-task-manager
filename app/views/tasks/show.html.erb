<div class="d-flex mt-5">
  <div class="col-4 box-menu">
    <%= link_to "< Back", tasks_path, class: 'btn btn-light mt-3' %>
    <%= link_to "Update", edit_task_path(@task), class: 'btn btn-light mt-3' %>
    <%= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure you want to delete #{@task.title}"}, class: 'btn btn-light mt-3' %>
  </div>

    <div class="col-8">
    <h3><%= @task.completed ? '✔️' : '❌'%> <%= @task.title %></h3>
    <p><%= @task.details %></p>
  </div>
</div>
